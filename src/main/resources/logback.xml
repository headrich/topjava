<?xml version="1.0" encoding="UTF-8" ?>
        <configuration>

    <!--<jmxConfigurator />-->

    <appender name ="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
        <charset>UTF-8</charset>
        <pattern>%d{dd-MM-yyyy HH:MM:SS.SSS} %t %-5level %logger - [%file:%line] : %msg %n  </pattern>
    </encoder>
</appender>
    <appender name ="FILEOUT" class="ch.qos.logback.core.FileAppender">
        <file>..\webapps\top\logs\topjava.log</file>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{dd-MM-yyyy HH:MM:SS.SSS} %t %-5level %logger - [%file:%line] : %msg %n  </pattern>
        </encoder>
    </appender>

    <logger name="ru.headrich.topjava" level="debug">
        <appender-ref ref="STDOUT"/>
    </logger>
    <root level="info" >
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILEOUT"/>
    </root>
    <logger name="org.hibernate" level="info" />


</configuration>