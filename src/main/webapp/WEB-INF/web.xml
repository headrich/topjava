<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <display-name>TOPJAVA</display-name>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>ru.headrich.topjava.web.servlets.HomeServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Users</servlet-name>
        <servlet-class>ru.headrich.topjava.web.servlets.Users</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Users</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserMeals</servlet-name>
        <servlet-class>ru.headrich.topjava.web.servlets.UserMeals</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserMeals</servlet-name>
        <url-pattern>/meals</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/WEB-INF/jsp/users.jsp</welcome-file>
    </welcome-file-list>

</web-app>